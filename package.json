{
  "name": "setup-system-action",
  "version": "1.0.4",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build -m --license licenses.txt src/index.ts",
    "build:dev": "ncc build -s --license licenses.txt src/index.ts",
    "lint": "eslint src --ext .ts",
    "pretest": "npm run lint && npm run build:dev",
    "run": "node dist/index.js",
    "run:post": "STATE_isPost=true node dist/index.js",
    "run:post:ts": "STATE_isPost=true ts-node src/index.ts",
    "run:ts": "ts-node src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-plugin-prefer-arrow-functions": "^3.2.4",
    "jest": "^29.7.0",
    "pre-commit": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "pre-commit": [
    "lint",
    "build"
  ],
  "engines": {
    "node": ">=16 <=17"
  }
}
